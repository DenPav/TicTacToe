<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_shape">

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="@string/NewGameButtonText"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/background_shape_menu_button"
        android:layout_margin="10dp"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/RecordsButton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="@string/RecordsButtonText"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/newGameButton"
        android:background="@drawable/background_shape_menu_button"
        android:layout_margin="20dp"

        />


    <Button
        android:id="@+id/PreferenceButton"
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:text="@string/PreferencesButtonText"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/RecordsButton"
        android:background="@drawable/background_shape_menu_button"
        android:layout_margin="20dp"
        />



</RelativeLayout>